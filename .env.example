# Copy this file to .env.local and configure your environment variables

# Application Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
DATABASE_URL=file:./dev.db

# Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-this-to-a-secure-random-string

# Single User Mode Toggle (set to "true" for single user mode, "false" for multi-user)
SINGLE_USER_MODE=true

# Default Admin User (used in single user mode)
DEFAULT_USER_EMAIL=admin@tencoder.dev
DEFAULT_USER_NAME=Admin User
